{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "skipLibCheck": true
  },
  "include": [
    "src",
    "App.tsx",
    "index.ts",
    "env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules/**"
  ]
}
